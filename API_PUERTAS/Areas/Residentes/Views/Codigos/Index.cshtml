
@{
    var id = Helpers.SessionHelper.GetUser();
    var IdSeccion = Helpers.ResidentesHelper.GetSeccion(id);
    ViewBag.Title = "Mis Códigos";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Mis Códigos</h4>
                <p class="text-muted font-13 mb-4"></p>
                <div class="row">
                    <div class="col col-ms-4">
                        <button class="btn btn-primary waves-effect waves-light" data-toggle="modal" data-target="#con-close-modal"><span><i class="la la-add"></i></span>Crear Códigos</button>
                    </div>
                </div>
                <div class="table-responsive">
                    <table width="100%" id="DataCodigos" class="table table-striped table-bordered dt-responsive nowrap">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Codigo</th>
                                <th>Tipo Codigo</th>
                                <th>Fecha Alta</th>
                                <th>Fecha Baja</th>
                                <th>Activo</th>
                                <th>Fecha Creación</th>
                                <th>Eliminar</th>
                            </tr>
                        </thead>
                        <tbody width="100%"></tbody>
                    </table>
                </div>
            </div> <!-- end card body-->
        </div> <!-- end card -->
    </div><!-- end col-->
</div>

@Html.Partial("_AgregarCodigo")

@section Scripts{

    <script>
        $(document).ready(function () {

            CargarData();
            getSecciones();
            generarCodigo();

            $("#IdResidente").val(@id);
            $("#IdSeccion").val(@IdSeccion);


        });

        function TipoCodigo(selectedValue) {

            // Verifica el valor seleccionado
            console.log(selectedValue);

            if (selectedValue == 2) {

                // Desactiva el input de fecha
                $('#FechaAlta').prop('disabled', true);
                $('#FechaBaja').prop('disabled', true);

            } else {

                // Habilita el input de fecha para otras opciones
                $('#FechaAlta').prop('disabled', false);
                $('#FechaBaja').prop('disabled', false);

            }
        }

        function getSecciones() {

            $.ajax({
                url: '@Url.Action("GetTipoCodigo", "Codigos")',
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    $.each(data, function (index, item) {
                        $('#IdTipoCodigo').append($('<option>', {
                            value: item.Value,
                            text: item.Text
                        }));
                    });
                },
                error: function (error) {
                    console.error('Error fetching data: ' + error);
                }
            });
        }

        function generarCodigo() {

            $.ajax({
                url: '@Url.Action("GetCodigoUnico", "Codigos")',
                type: 'GET',
                success: function (data) {

                    $("#Codigo").val(data);
                },
                error: function () {

                    console.error('Error al generar el código único.');
                }
            });
        }


        function CargarData() {

            $('#DataCodigos').DataTable().clear().destroy();

            var table = $("#DataCodigos").DataTable({
                dom: 'Bfrtip',
                buttons: [

                ],
                    language:{
                          paginate:{
                               previous:"<i class='mdi mdi-chevron-left'>",
                               next:"<i class='mdi mdi-chevron-right'>"
                       }
                },

               ajax: {
                   url: '@Url.Action("GetCodigos", "Codigos")',
                   data: {IdResidente : @id},
                   type: 'GET',
               },
               columns: [
                   { "data": "IdCodigo" },
                   { "data": "Codigo" },
                   { "data": "NombreTipoCodigo" },
                   {
                       "data": "FechaAlta", "render": function (value) {
                           if (value === null) return "";

                           var pattern = /Date\(([^)]+)\)/;
                           var results = pattern.exec(value);
                           var dt = new Date(parseFloat(results[1]));

                           return "<center>" + (dt.getDate() < 10 ? '0' : '') + dt.getDate() + "-" + ((dt.getMonth() + 1) < 10 ? '0' : '') + (dt.getMonth() + 1) + "-" + dt.getFullYear() + "</center>";
                       }
},
                   {
                       "data": "FechaBaja", "render": function (value) {
                           if (value === null) return "";

                           var pattern = /Date\(([^)]+)\)/;
                           var results = pattern.exec(value);
                           var dt = new Date(parseFloat(results[1]));

                           return "<center>" + (dt.getDate() < 10 ? '0' : '') + dt.getDate() + "-" + ((dt.getMonth() + 1) < 10 ? '0' : '') + (dt.getMonth() + 1) + "-" + dt.getFullYear() + "</center>";
                       }
},
                   {
                       "data": "Activo",
                       "render": function (value) {
                           if (value) {
                               return "<center><h4><i class='text-success icon-like'></i></h4></center>";
                           } else {
                               return "<center><h4><i class='text-danger icon-dislike'></i></h4></center>";
                           }

                       }
                   },
                   {
                       "data": "FechaCreacion", "render": function (value) {
                           if (value === null) return "";

                           var pattern = /Date\(([^)]+)\)/;
                           var results = pattern.exec(value);
                           var dt = new Date(parseFloat(results[1]));

                           return "<center>" + (dt.getDate() < 10 ? '0' : '') + dt.getDate() + "-" +((dt.getMonth() + 1) < 10 ? '0' : '') + (dt.getMonth() + 1) + "-" +dt.getFullYear() + "</center>";
                       }

                   },
                   {
                       "data": null, // Columna de los botones
                       render: function (data, type, row) {

                           return '<center><button style="background-color: #FF0000; color: white;" type="button" title="Eliminar" class="eliminar btn btn-danger waves-effect waves-light"><i class="icon-trash"></i></button></center>';

                       }


                   }

               ],
                  drawCallback:function(){
                     $(".dataTables_paginate > .pagination").addClass("pagination-rounded")}
           });

            eliminar("#DataCodigos tbody", table);
        }

        var eliminar = function (tbody, table) {

            $(tbody).off("click", "button.eliminar");
            $(tbody).on("click", "button.eliminar", function () {

                data = table.row($(this).parents("tr")).data();
                var id = data.IdCodigo;


                Swal.fire({
                    title: "Estas seguro?",
                    text: "¡Eliminar el codigo: " + data.Codigo + "!",
                    type:  "warning",
                    showCancelButton: !0,
                    confirmButtonText: "Aceptar",
                    cancelButtonText:  "Cancelar",
                    confirmButtonClass: "btn btn-success mt-2",
                    cancelButtonClass:  "btn btn-danger ml-2 mt-2",
                    buttonsStyling: !1

                }).then(function (t) {


                if (t.value) {

                     $.ajax({
                        url: '@Url.Action("DeleteCodigo", "Codigos")',
                        type: 'POST',
                        data: { IdCodigo: id, },
                        success: function (data) {


                               if (data.error) {

                                    Swal.fire({
                                         title: "Error ! ",
                                         text:  data.message,
                                         type:  "error",
                                         confirmButtonClass: "Cerrar",
                                         showConfirmButton: true,

                                         }).then((result) => {

                                          CargarData();

                                    });

                               } else {

                                      Swal.fire({
                                           title: "Buen Trabajo!",
                                           text:   data.message,
                                           type:  "success",
                                           confirmButtonClass: "Cerrar",
                                           showConfirmButton: true,

                                      }).then((result) => {

                                          CargarData();

                                      });
                                }
                        },
                        error: function () {
                            Swal.fire({
                                title: "Error ! ",
                                text:  "Imposible de borrar ya que cuenta con registros que dependen de este mismo.",
                                type: "error",
                                confirmButtonClass: "Cerrar",
                                showConfirmButton: true,

                            }).then((result) => {

                                CargarData();

                            });
                         }

                     });

                 } else {

                     Swal.fire({
                          title: "Cancelado",
                          text: "Tu codigo está seguro",
                          type: "error"
                     });
                }
                })


            });
        }



    </script>

}