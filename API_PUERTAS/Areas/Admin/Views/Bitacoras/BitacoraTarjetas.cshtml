@model Models.PLU_Usuario
@{
    ViewBag.Title = "BITACORA TARJETAS";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title"></h4>
                <p class="text-muted font-13 mb-4"></p>
                <div class="row">
                    <div class="col col-ms-4">

                    </div>
                </div>

                <table width="100%" id="DataBitacora" class="table table-striped table-bordered dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nombre Residente</th>
                            <th>Domicilio</th>
                            <th>No</th>
                            <th>Celular</th>
                            <th>Fecha Acceso</th>
                            <th>Hora Acceso</th>
                        </tr>
                    </thead>
                    <tbody width="100%"></tbody>
                </table>
            </div> <!-- end card body-->
        </div> <!-- end card -->
    </div><!-- end col-->
</div>

@section Scripts{

    <script>
        $(document).ready(function () {

            CargarData(@Model.IdSeccion);
        });


        function CargarData(IdSeccion) {

            $('#DataBitacora').DataTable().clear().destroy();

            var table = $("#DataBitacora").DataTable({
                dom: 'Bfrtip',
                buttons: [

                ],
                language: {
                    paginate: {
                        previous: "<i class='mdi mdi-chevron-left'>",
                        next: "<i class='mdi mdi-chevron-right'>"
                    }
                },

                ajax: {
                    url: '@Url.Action("GetBitacoraTarjetas", "Bitacoras")',
                    type: 'GET',
                    data: { IdSeccion: IdSeccion }
                },
                columns: [

                    { "data": "IdBitacoraTarjeta" },
                    { "data": "NombreCompleto" },
                    { "data": "Domicilio" },
                    { "data": "NoCasa" },
                    { "data": "Celular" },
                    {
                        "data": "FechaUso", "render": function (value) {
                            if (value === null) return "";

                            var pattern = /Date\(([^)]+)\)/;
                            var results = pattern.exec(value);
                            var dt = new Date(parseFloat(results[1]));

                            return "<center>" + (dt.getDate() < 10 ? '0' : '') + dt.getDate() + "-" + ((dt.getMonth() + 1) < 10 ? '0' : '') + (dt.getMonth() + 1) + "-" + dt.getFullYear() + "</center>";
                        }

                    },
                    {
                        "data": "FechaUso",
                        "render": function (value) {
                            if (value === null) return "";

                            var pattern = /Date\(([^)]+)\)/;
                            var results = pattern.exec(value);
                            var dt = new Date(parseFloat(results[1]));

                            // Obtener la hora, minutos y segundos
                            var hours = dt.getHours();
                            var ampm = hours >= 12 ? 'PM' : 'AM';
                            hours = hours % 12;
                            hours = hours ? hours : 12; // Hacer que las 12 PM sean 12 y no 0

                            var minutes = (dt.getMinutes() < 10 ? '0' : '') + dt.getMinutes();
                            var seconds = (dt.getSeconds() < 10 ? '0' : '') + dt.getSeconds();

                            // Construir la cadena de tiempo con AM/PM
                            var timeString = hours + ":" + minutes + ":" + seconds + " " + ampm;

                            return "<center>" + timeString + "</center>";
                        }
                    }

               ],
                  drawCallback:function(){
                     $(".dataTables_paginate > .pagination").addClass("pagination-rounded")}
           });


        }



    </script>

}