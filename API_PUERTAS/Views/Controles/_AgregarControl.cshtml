@model Models.PLU_Controles

<!--modal -->
<div id="con-close-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Agregar Control</h4>
                <button type="button" id="close" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>

            @using (Html.BeginForm("Guardar", "Controles", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "divMenu" }))
            {

                <div class="modal-body p-4">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="field-1" class="control-label">Nombre Sección</label>
                                @Html.EditorFor(x => x.NumerControl, new { htmlAttributes = new { @class = "form-control", placeholder = "" } })
                                @Html.ValidationMessageFor(x => x.NumerControl, null, new { @class = "badge badge-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="field-1" class="control-label">Nombre Seccion</label>
                                <select id="IdSeccion" name="IdSeccion" class="form-control"></select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="field-1" class="control-label">Residente</label>
                                <select id="IdResidente" name="IdResidente" class="form-control"></select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary waves-effect" id="cerrar" data-dismiss="modal">Cerrar</button>
                    <button data-ajax="true" data-reset="true" type="submit" class="btn btn-info waves-effect waves-light" id="guardar">Guardar</button>
                </div>
            }
        </div>
    </div>
</div><!-- /.modal -->