
@{
    ViewBag.Title = "Tarjetas";
}


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">Controles</h4>
                <p class="text-muted font-13 mb-4"></p>
                <div class="row">
                    <div class="form-group col-md-6">
                        <button class="btn btn-primary waves-effect waves-light" data-toggle="modal" data-target="#con-close-modal">
                            <span><i class="la la-add"></i></span>Agregar Tarjeta
                        </button>
                    </div>
                    <div class="form-group col-md-3"></div>
                    <div class="form-group col-md-3">
                        <label>Secciones</label>
                        <select id="Secciones" name="Secciones" class="form-control"></select>
                    </div>
                </div>
                <table width="100%" id="DataTarjeta" class="table table-striped table-bordered dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nombre Residente</th>
                            <th>Celular</th>
                            <th>Seccion</th>
                            <th>Numero Tarjeta</th>
                            <th>Activo</th>
                            <th>Fecha Creación</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody width="100%"></tbody>
                </table>
            </div> <!-- end card body-->
        </div> <!-- end card -->
    </div><!-- end col-->
</div>



@section Scripts{

    <script>
        $(document).ready(function () {


            GetSecciones();
            GetResidentes(1);
            CargarData(1);

        });


        $("#Secciones").on("change", function () {
            var IdSeccion = $("#Secciones").val();
            CargarData(IdSeccion);
        });

        $("#IdSeccion").on("change", function () {
            var IdSeccion = $("#IdSeccion").val();
            GetResidentes(IdSeccion);
        });


        function CargarData(IdSeccion) {

            $('#DataTarjeta').DataTable().clear().destroy();

            var table = $("#DataTarjeta").DataTable({
                dom: 'Bfrtip',
                buttons: [

                ],
                    language:{
                          paginate:{
                               previous:"<i class='mdi mdi-chevron-left'>",
                               next:"<i class='mdi mdi-chevron-right'>"
                       }
                },

               ajax: {
                   url: '@Url.Action("GetTarjetas", "Tarjetas")',
                   type: 'GET',
                   data: { IdSeccion: IdSeccion }
               },
               columns: [
                   { "data": "IdTarjeta" },
                   { "data": "NombreCompleto" },
                   { "data": "Celular" },
                   { "data": "NombreSeccion" },
                   { "data": "NumeroTarjeta" },
                   {
                       "data": "Activo",
                       "render": function (value) {
                           if (value) {
                               return "<center><h4><i class='text-success icon-like'></i></h4></center>";
                           } else {
                               return "<center><h4><i class='text-danger icon-dislike'></i></h4></center>";
                           }

                       }
                   },
                   {
                       "data": "FechaCreacion", "render": function (value) {
                           if (value === null) return "";

                           var pattern = /Date\(([^)]+)\)/;
                           var results = pattern.exec(value);
                           var dt = new Date(parseFloat(results[1]));

                           return "<center>" + (dt.getDate() < 10 ? '0' : '') + dt.getDate() + "-" +((dt.getMonth() + 1) < 10 ? '0' : '') + (dt.getMonth() + 1) + "-" +dt.getFullYear() + "</center>";
                       }

                   },
                   {
                       "data": null, // Columna de los botones
                        render: function (data, type, row) {

                            if (row.Activo) {

                                return '<center><button type="button" title="Desactivar" class="cambiostatus btn btn-danger waves-effect waves-light"><i class="icon-close"></i></button></center>';


                            } else {

                                return '<center><button type="button" title="Activar" class="cambiostatus btn btn-success waves-effect waves-light"><i class="icon-check"></i></button></center>';
                            }

                       }
                   },
                   {
                       "data": null, // Columna de los botones
                       render: function (data, type, row) {

                           return '<center><button style="background-color: #FF0000; color: white;" type="button" title="Eliminar" class="eliminar btn btn-danger waves-effect waves-light"><i class="icon-trash"></i></button></center>';

                        }


                   }

               ],
                  drawCallback:function(){
                     $(".dataTables_paginate > .pagination").addClass("pagination-rounded")}
           });

            cambiar_status("#DataTarjeta tbody", table);
            eliminar("#DataTarjeta tbody", table);
        }

        var cambiar_status = function (tbody, table) {

            $(tbody).off("click", "button.cambiostatus");
            $(tbody).on("click", "button.cambiostatus", function () {

                data = table.row($(this).parents("tr")).data();
                var id = data.IdTarjeta;
                var activo = data.Activo;


                Swal.fire({
                    title: "Estas seguro?",
                    text: "¡Cambiaras el estatus de la tarjeta: " + data.NumeroTarjeta + "!",
                    type:  "warning",
                    showCancelButton: !0,
                    confirmButtonText: "Aceptar",
                    cancelButtonText:  "Cancelar",
                    confirmButtonClass: "btn btn-success mt-2",
                    cancelButtonClass:  "btn btn-danger ml-2 mt-2",
                    buttonsStyling: !1

                }).then(function (t) {


                if (t.value) {

                     $.ajax({
                        url: '@Url.Action("CambiarStatus", "Tarjetas")',
                        type: 'POST',
                        data: { id: id, activo: activo },
                        success: function (data) {


                               if (data.error) {

                                    Swal.fire({
                                         title: "Error ! ",
                                         text:  data.message,
                                         type:  "error",
                                         confirmButtonClass: "Cerrar",
                                         showConfirmButton: true,

                                         }).then((result) => {

                                             CargarData(data.result);
                                             $("#IdSeccion").val(data.result);

                                    });

                               } else {

                                      Swal.fire({
                                           title: "Buen Trabajo!",
                                           text:   data.message,
                                           type:  "success",
                                           confirmButtonClass: "Cerrar",
                                           showConfirmButton: true,

                                      }).then((result) => {

                                          CargarData(data.result);
                                          $("#IdSeccion").val(data.result);

                                      });
                                }
                        },
                        error: function () {
                           console.log("Error");
                         }

                     });

                 } else {

                     Swal.fire({
                          title: "Cancelado",
                          text: "Tu Tarjeta está segura",
                          type: "error"
                     });
                }
                })


            });
        }

        var eliminar = function (tbody, table) {

            $(tbody).off("click", "button.eliminar");
            $(tbody).on("click", "button.eliminar", function () {

                data = table.row($(this).parents("tr")).data();
                var IdTarjeta = data.IdTarjeta;


                Swal.fire({
                    title: "Estas seguro?",
                    text: "¡Eliminar la tarjeta: " + data.NumeroTarjeta + "!",
                    type:  "warning",
                    showCancelButton: !0,
                    confirmButtonText: "Aceptar",
                    cancelButtonText:  "Cancelar",
                    confirmButtonClass: "btn btn-success mt-2",
                    cancelButtonClass:  "btn btn-danger ml-2 mt-2",
                    buttonsStyling: !1

                }).then(function (t) {


                if (t.value) {

                     $.ajax({
                        url: '@Url.Action("DeleteTarjetas", "Tarjetas")',
                        type: 'POST',
                        data: { IdTarjeta: IdTarjeta, },
                        success: function (data) {


                               if (data.error) {

                                    Swal.fire({
                                         title: "Error ! ",
                                         text:  data.message,
                                         type:  "error",
                                         confirmButtonClass: "Cerrar",
                                         showConfirmButton: true,

                                         }).then((result) => {

                                             CargarData(data.result);
                                             $("#IdSeccion").val(data.result);

                                    });

                               } else {

                                      Swal.fire({
                                           title: "Buen Trabajo!",
                                           text:   data.message,
                                           type:  "success",
                                           confirmButtonClass: "Cerrar",
                                           showConfirmButton: true,

                                      }).then((result) => {

                                          CargarData(data.result);
                                          $("#IdSeccion").val(data.result);

                                      });
                                }
                        },
                        error: function () {
                            Swal.fire({
                                title: "Error ! ",
                                text:  "Imposible de borrar ya que cuenta con registros que dependen de este mismo.",
                                type: "error",
                                confirmButtonClass: "Cerrar",
                                showConfirmButton: true,

                            }).then((result) => {

                                CargarData();

                            });
                         }

                     });

                 } else {

                     Swal.fire({
                          title: "Cancelado",
                          text: "Tu tarjeta está segura",
                          type: "error"
                     });
                }
                })


            });
        }


        function GetSecciones() {

             $.ajax({
                   url: '@Url.Action("GetSecciones", "Home")',
                   type: 'GET',
                   success: function(data) {
                     // Limpiar el select
                       $("#Secciones").empty();
                       $("#IdSeccion").empty();

                     // Agregar las opciones al select
                       $.each(data, function (index, data) {
                           $("#Secciones").append($('<option></option>').val(data.id).text(data.text));
                           $("#IdSeccion").append($('<option></option>').val(data.id).text(data.text));
                       });
                   },
                     error: function() {
                           // Manejar el error si la solicitud AJAX falla
                           console.log("Error al obtener las opciones para el select dinámico.");
                     }
                 });
        }


        function GetResidentes(IdSeccion) {

             $.ajax({
                   url: '@Url.Action("GetResidentes", "Tarjetas")',
                   type: 'GET',
                   data: {IdSeccion: IdSeccion},
                   success: function(data) {
                     // Limpiar el select
                       $("#IdResidente").empty();

                     // Agregar las opciones al select
                       $.each(data, function (index, data) {
                           $("#IdResidente").append($('<option></option>').val(data.id).text(data.text));
                       });
                   },
                     error: function() {
                           // Manejar el error si la solicitud AJAX falla
                           console.log("Error al obtener las opciones para el select dinámico.");
                     }
                 });
        }



    </script>

}