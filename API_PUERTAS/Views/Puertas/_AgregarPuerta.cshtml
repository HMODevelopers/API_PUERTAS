@model Models.PLU_Puertas

<!--modal -->
<div id="con-close-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Agregar Puertas</h4>
                <button type="button" id="close" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>

            @using (Html.BeginForm("Guardar", "Puertas", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "divMenu" }))
            {
                <div class="modal-body p-4">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="field-1" class="control-label">Nombre Puerta</label>
                                @Html.EditorFor(x => x.NombrePuerta, new { htmlAttributes = new { @class = "form-control", placeholder = "" } })
                                @Html.ValidationMessageFor(x => x.NombrePuerta, null, new { @class = "badge badge-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="field-1" class="control-label">Nombre Seccion</label>
                                <select id="IdSeccion" name="IdSeccion" class="form-control"></select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="field-1" class="control-label">Código</label>
                                @Html.EditorFor(x => x.Code, new { htmlAttributes = new { @class = "form-control", placeholder = "" } })
                                @Html.ValidationMessageFor(x => x.Code, null, new { @class = "badge badge-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.CheckBoxFor(x => x.Activo, new { htmlAttributes = new { @class = "form-control", placeholder = "" } })
                                <label for="Activo">Activo</label>
                                @Html.ValidationMessageFor(x => x.Activo, null, new { @class = "badge badge-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary waves-effect" id="cerrar" data-dismiss="modal">Cerrar</button>
                    <button data-ajax="true" data-reset="true" type="submit" class="btn btn-info waves-effect waves-light" id="guardar">Guardar</button>
                </div>
            }
        </div>
    </div>
</div><!-- /.modal -->

